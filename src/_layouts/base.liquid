<!doctype html>
<html lang="{{ meta.lang }}">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        /* plus-jakarta-sans-latin-wght-normal */
        @font-face {
          font-family: 'Plus Jakarta Sans Variable';
          font-style: normal;
          font-display: swap;
          font-weight: 200 800;
          src: url(https://cdn.jsdelivr.net/fontsource/fonts/plus-jakarta-sans:vf@latest/latin-wght-normal.woff2) format('woff2-variations');
          unicode-range: U+0000-00FF,U+0131,U+0152-0153,U+02BB-02BC,U+02C6,U+02DA,U+02DC,U+0304,U+0308,U+0329,U+2000-206F,U+20AC,U+2122,U+2191,U+2193,U+2212,U+2215,U+FEFF,U+FFFD;
        }
    </style>
    {% css %}
      {% include "styles/tailwind.css" | safe %}
      {% include "styles/components/container.css" | safe %}
    {% endcss %}
    <link rel="stylesheet" href="{% getBundleFileUrl "css" %}">
    <title>{{ title }}</title>
  </head>
  <body>
    {% include "layouts/navbar" %}
    <main id="main" class="container mx-auto">
      {{ content }}
    </main>
  </body>
</html>
